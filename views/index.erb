<div class="row">
  <h1>Location Index</h1>
</div>

<div class="row">
  <table class="table table-striped table-bordered">
    <tr>
      <th>
        Latitude
      </th>
      <th>
        Longitude
      </th>
      <th>
        Address
      </th>
    </tr>
    <% address_list.each do |address| %>
      <tr>
        <td>
          <%= address.lat %>
        </td>
        <td>
          <%= address.lng %>
        </td>
        <td>
          <%= address.full_address %>
        </td>
      </tr>
    <% end %>
  </table>
</div>
